<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t("service.name") %></h1>

    <p class="govuk-body">
      <%= t(".blurb1") %>
    </p>
    <p class="govuk-heading-m">
      <%= t(".service_user") %>
    </p>
    <p class="govuk-body">
      <%= t(".blurb2") %>
    </p>
    <% if Rails.configuration.x.mock_azure %>
      <%= govuk_start_button(text: t(".start_button"),
                             href: user_session_path) %>
    <% else %>
      <%= govuk_start_button(text: t(".start_button"),
                             href: user_azure_ad_omniauth_authorize_path,
                             as_button: true) %>
    <% end %>
  </div>
</div>
